<%- include('../Partials/header'); -%>
<%- include('../Partials/main_nav'); -%>
<!-- Content for Edit Page -->
<div class="container my-5"> <!--creates a main container with top and bottom margin-->
    <div class="row justify-content-center"> <!--centers the form horizontally-->
        <div class="col-md-8 col-lg-6"> <!--responsive column size-->
            <h1 class="text-center display-4 mb-3" style="color: #1a73e8;"><%= title %></h1><!--page title centered with blue text-->
            <form class="form edit-form" method="POST" style="box-shadow: 0 0 15px rgba(0, 0, 0, 0.1); padding: 20px; border-radius: 10px; background-color: #fff;"> <!--styled form with shadow, padding, rounded corners-->
                <!-- Name Field -->
                <div class="form-group mb-3"> <!--form group with bottom margin-->
                    <label for="nameTextField" style="font-weight: bold;">Name</label> <!--label with bold text-->
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter Your Name" name="Name" value="<%= Survey.Name %>" required style="border-radius: 8px;"> <!--text input with rounded corners-->
                </div>
                
                <!-- Job Title Field -->
                <div class="form-group mb-3"> 
                    <label for="jobTitleTextField" style="font-weight: bold;">Job Title</label> 
                    <input type="text" class="form-control" id="jobTitleTextField" placeholder="Enter the Job Title" name="JobTitle" value="<%= Survey.JobTitle %>" required style="border-radius: 8px;"> 
                </div>
                
                <!-- Satisfaction Field -->
                <div class="form-group mb-3"> 
                    <label for="satisfactionTextField" style="font-weight: bold;">Are you satisfied with your job?</label> 
                    <input type="text" class="form-control" id="satisfactionTextField" placeholder="Enter Yes or No" name="Satisfaction" value="<%= Survey.Satisfaction %>" required style="border-radius: 8px;">
                </div>

                <!-- Duration of Employment Field -->
                <div class="form-group mb-3">
                    <label for="durationOfEmploymentTextField" style="font-weight: bold;">How long have you been with the company?</label>
                    <input type="text" class="form-control" id="durationOfEmploymentTextField" placeholder="Enter Duration of Employment in years" name="DurationOfEmployment" value="<%= Survey.DurationOfEmployment %>" required style="border-radius: 8px;">
                </div>
                
                <!-- Improvements Field -->
                <div class="form-group mb-4">
                    <label for="improvementsTextArea" style="font-weight: bold;">What changes would improve your job satisfaction?</label>
                    <textarea class="form-control" id="improvementsTextArea" placeholder="Describe the suggested improvement" name="Improvements" required style="border-radius: 8px;"><%= Survey.Improvements %></textarea>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-between"> <!--flex container to space buttons evenly-->
                    <button class="btn btn-primary btn-sm" type="submit" style="border-radius: 8px;"> <!--small blue button for submit-->
                        <i class="fas fa-edit"></i> Submit
                    </button>
                    <a href="/surveyslist" class="btn btn-warning btn-sm" role="button" style="border-radius: 8px;"> <!--small yellow button for cancel with link back to surveys list-->
                        <i class="fas fa-undo"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../Partials/footer'); -%>
